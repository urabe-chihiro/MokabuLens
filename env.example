# ========================================
# MokabuLens Environment Variables
# 設定管理システム
# ========================================

# Application
ENVIRONMENT=development
VERSION=1.0.0

# Database Configuration (必須: POSTGRES_PASSWORD)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=mokabu_lens
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Security Configuration (必須: SECURITY_JWT_SECRET, SECURITY_ENCRYPTION_KEY)
SECURITY_JWT_SECRET=your_jwt_secret_key_here
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRE_MINUTES=30
SECURITY_ENCRYPTION_KEY=your_encryption_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Web Configuration (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
WEB_PORT=3000

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Development
NODE_ENV=development
PYTHON_ENV=development

# ========================================
# Production Environment Variables
# 本番環境では以下を設定してください
# ========================================
# ENVIRONMENT=production
# POSTGRES_PASSWORD=very_secure_production_password
# SECURITY_JWT_SECRET=very_secure_jwt_secret
# SECURITY_ENCRYPTION_KEY=very_secure_encryption_key
# API_DEBUG=false
# LOG_LEVEL=WARNING
