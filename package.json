{
  "name": "mokabu-lens-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:api": "cd apps/api && source venv/bin/activate && python main.py",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:api\"",
    "dev:full": "concurrently \"pnpm dev\" \"pnpm dev:api\" \"docker-compose up postgres\"",
    "build": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "start": "pnpm --filter web start",
    "start:api": "pnpm --filter api start",
    "lint": "pnpm --filter web lint",
    "lint:api": "pnpm --filter api lint",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "docker-compose up --build",
    "docker:dev:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:web:dev": "docker-compose up web",
    "docker:web:prod": "docker-compose -f docker-compose.prod.yml up web"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}